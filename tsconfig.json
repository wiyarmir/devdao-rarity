{
  "include": [
    "src",
    "scripts",
    "test"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "dom.iterable",
      "ESNext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
